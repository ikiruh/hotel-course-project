<Application x:Class="Hotel.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Hotel"
             xmlns:views="clr-namespace:Hotel.Views"
             xmlns:vms="clr-namespace:Hotel.ViewModel">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vms:LoginViewModel}">
            <views:LoginView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vms:ListingReservationViewModel}">
            <views:ListingReservationView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vms:CreateReservationViewModel}">
            <views:CreateReservationView />
        </DataTemplate>
    </Application.Resources>
</Application>
